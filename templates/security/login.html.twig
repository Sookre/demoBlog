{% extends 'base.html.twig' %}

{% block title %}BlogSymfony | Identifiez-vous{% endblock %}

{% block body %}

    {% if error %}
        <div class="alert alert-danger p-3 text-white text-center mx-auto my-3">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% for message in app.flashes('success') %}

        <div class="col-6 bg-sucess text-center text-white p-3 mx-auto">
        </div>

    {% endfor %}

    <h1 class="h3 mb-3 font-weight-normal text-center">Identifiez-vous</h1>

<form method="post" class="col-4 mx-auto"> 

    <label for="inputEmail">Email</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
    <label for="inputPassword">Password</label>
    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    <button class="btn btn-primary mt-3" type="submit">  connection </button>
</form>
{% endblock %}
